<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ElChenChen Vuelve</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"> 
	<link href="~/css/style.css" rel="stylesheet" />
	<link href="~/css/stylefile.css" rel="stylesheet" />
	<link href="~/css/filecom.css" rel="stylesheet" />
	<link href="~/css/stylereport.css" rel="stylesheet" />

 </head>
<body class="bg-light"  style="height: 100vh; margin: 0;">
    @{
        var nombre = Context.Session.GetString("Nombre") ?? "";
        var rol = Context.Session.GetString("Roles") ?? "";
        var iniciales = string.Join("", @nombre.Split(' ').Select(n => n.FirstOrDefault()));
    }
     <div id="viewport">
        <aside id="sidebar">
            <header class="sidebar text-center py-3">
                <img src="~/img/logo.png" width="150" height="35" alt="Logo" />
            </header>
            <ul class="nav flex-column">
                <li class="nav-item"> 
                    <a class="nav-link dropdown-toggle" data-bs-toggle="collapse" href="#solicitudesSubmenu" role="button" aria-expanded="false">
                        <i class="zmdi zmdi-view-dashboard"></i> <strong>🏠 Solicitudes</strong>
                    </a>
                    <div class="collapse" id="solicitudesSubmenu">
                        <ul class="nav flex-column ps-3">
                            <li class="nav-item">
                                <a class="nav-link" href="../Process/Index?tarea=P">Pendientes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="../Process/Index?tarea=C">Competadas</a>
                            </li> 
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="../Reportes/Reporte"><i class="zmdi zmdi-link"></i>📊 Reportes</a>
                </li>
                <li class="nav-item" style="@(rol == "ADMINISTRADOR" ? "" : "display: none;")">
                    <a class="nav-link" href="../Usuario/Index"><i class="zmdi zmdi-widgets"></i>➕ Usuarios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="zmdi zmdi-calendar"></i>📄 Documentos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="zmdi zmdi-info-outline"></i> About</a>
                </li>
            </ul>
        </aside>
         
        <div id="content">
             <nav class="navbar">
                <div class="container-fluid d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-2">
                        <button class="btn btn-primary"  onclick="window.history.back()">← Volver</button>
                     </div>
                    <div class="d-flex align-items-center gap-3">
                        <div class="dropdown">
                            <button class="btn btn-link text-dark text-decoration-none no-caret d-flex align-items-center gap-2" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                               
                                <strong>@nombre</strong>
                                <div class="user-avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                      @iniciales 
                                </div>
                               
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow rounded-3 p-3 mt-2" aria-labelledby="userDropdown">
                                <li class="mb-2">
                                   
                                </li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-grid">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-primary">Cerrar Sesión</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </nav> 
             
            
            <div class="container">
                <main role="main">
                    @RenderBody()
                </main>
            </div> 

        </div>  
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script> 
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
